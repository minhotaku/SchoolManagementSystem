    <script>
           document.addEventListener('DOMContentLoaded', () => {
            // --- DOM Elements ---
            const adminSidebar = document.getElementById('adminSidebar');
            const adminContent = document.getElementById('adminContent');
            const toggleSidebarBtn = document.getElementById('toggleSidebar');
            const mobileOverlay = document.getElementById('mobileOverlay');
            const submenuToggles = document.querySelectorAll('.has-submenu');
            const allSubmenus = document.querySelectorAll('.submenu'); // Lấy tất cả submenu
            const allSidebarLinks = adminSidebar.querySelectorAll('a'); // Lấy tất cả các link trong sidebar

            // --- Constants ---
            const ACTIVE_SUBMENUS_KEY = 'activeSubmenus'; // Key cho localStorage

            // --- Hàm đóng tất cả submenu ---
            // (Hàm này giữ nguyên, hữu ích khi thu gọn sidebar)
            function closeAllSubmenus() {
                allSubmenus.forEach(submenu => {
                    submenu.classList.remove('open');
                    const toggle = submenu.previousElementSibling;
                    if (toggle && toggle.classList.contains('has-submenu')) {
                        toggle.classList.remove('open');
                    }
                });
                // Xóa trạng thái đã lưu khi đóng tất cả một cách chủ động
                localStorage.removeItem(ACTIVE_SUBMENUS_KEY);
            }

            // --- Hàm đóng một submenu cụ thể ---
            // Hàm này sẽ được dùng nhiều hơn
            function closeSpecificSubmenu(submenuToClose) {
                if (submenuToClose && submenuToClose.classList.contains('open')) {
                     submenuToClose.classList.remove('open');
                     const toggle = submenuToClose.previousElementSibling;
                     if (toggle && toggle.classList.contains('has-submenu')) {
                         toggle.classList.remove('open');
                     }
                     // Sau khi đóng, cập nhật lại trạng thái lưu trữ
                     saveOpenSubmenusState();
                }
            }


            // --- Hàm lưu trạng thái submenu đang mở ---
            // Chỉ lưu tối đa 1 ID
            function saveOpenSubmenusState() {
                const activeSubmenuIds = [];
                const openSubmenu = adminSidebar.querySelector('.submenu.open'); // Query trong sidebar
                if (openSubmenu && openSubmenu.id) {
                    activeSubmenuIds.push(openSubmenu.id);
                } else if (openSubmenu && !openSubmenu.id) {
                    console.warn("Submenu đang mở không có ID, không thể lưu trạng thái:", openSubmenu);
                }
                localStorage.setItem(ACTIVE_SUBMENUS_KEY, JSON.stringify(activeSubmenuIds));
            }

            // --- Hàm khôi phục trạng thái submenu từ localStorage ---
            // (Hàm này giữ nguyên)
            function restoreOpenSubmenusState() {
                const savedSubmenuIds = JSON.parse(localStorage.getItem(ACTIVE_SUBMENUS_KEY) || '[]');
                if (savedSubmenuIds && savedSubmenuIds.length > 0) {
                    savedSubmenuIds.forEach(submenuId => {
                        const submenu = document.getElementById(submenuId);
                        if (submenu) {
                            submenu.classList.add('open');
                            const toggle = submenu.previousElementSibling;
                            if (toggle && toggle.classList.contains('has-submenu')) {
                                toggle.classList.add('open');
                            }
                        }
                    });
                }
            }

            // --- Khôi phục trạng thái submenu khi trang tải xong ---
            const isDesktop = window.innerWidth >= 992;
            if (!isDesktop || (isDesktop && adminSidebar && !adminSidebar.classList.contains('collapsed'))) {
                restoreOpenSubmenusState();
            }


            // --- Toggle Sidebar ---
            if (toggleSidebarBtn) {
                toggleSidebarBtn.addEventListener('click', () => {
                    const isMobile = window.innerWidth < 992;

                    if (isMobile) {
                        adminSidebar.classList.toggle('show');
                        mobileOverlay.classList.toggle('show');
                    } else {
                        adminSidebar.classList.toggle('collapsed');
                        adminContent.classList.toggle('expanded');

                        if (adminSidebar.classList.contains('collapsed')) {
                            // Khi thu gọn, đóng hết và xóa trạng thái lưu
                            closeAllSubmenus();
                        } else {
                            // Khi mở rộng lại, khôi phục (nếu có)
                            restoreOpenSubmenusState();
                        }
                    }
                });
            }

            // --- Close Mobile Sidebar when Overlay Clicked ---
            if (mobileOverlay) {
                mobileOverlay.addEventListener('click', () => {
                    adminSidebar.classList.remove('show');
                    mobileOverlay.classList.remove('show');
                });
            }

            // --- Submenu Toggle Logic (CHỈ MỘT SUBMENU MỞ) ---
            submenuToggles.forEach(toggle => {
                // Đảm bảo ID cho submenu (quan trọng cho lưu/khôi phục)
                const submenu = toggle.nextElementSibling;
                if (submenu && submenu.classList.contains('submenu') && !submenu.id) {
                    const generatedId = 'submenu-' + (toggle.getAttribute('href') || toggle.textContent.trim().replace(/\s+/g, '-') || Math.random().toString(36).substring(7));
                    submenu.id = generatedId;
                    console.warn("Submenu đã được gán ID tự động:", generatedId, submenu);
                }

                toggle.addEventListener('click', (e) => {
                    e.preventDefault(); // Ngăn thẻ <a> điều hướng

                    const currentSubmenu = toggle.nextElementSibling;

                    if (!currentSubmenu || !currentSubmenu.classList.contains('submenu')) {
                        console.error("Không tìm thấy .submenu hợp lệ sau toggle:", toggle);
                        return;
                    }

                    const isCurrentlyOpen = currentSubmenu.classList.contains('open');

                    // Tìm và đóng submenu *khác* đang mở (nếu có)
                    const currentlyOpenSubmenu = adminSidebar.querySelector('.submenu.open');
                    if (currentlyOpenSubmenu && currentlyOpenSubmenu !== currentSubmenu) {
                         closeSpecificSubmenu(currentlyOpenSubmenu); // Dùng hàm mới
                    }

                    // Bây giờ, quyết định trạng thái cho cái vừa click
                    if (isCurrentlyOpen) {
                        // Nếu nó đang mở, thì đóng nó lại
                        currentSubmenu.classList.remove('open');
                        toggle.classList.remove('open');
                    } else {
                        // Nếu nó đang đóng, thì mở nó ra
                        currentSubmenu.classList.add('open');
                        toggle.classList.add('open');
                    }

                    // Lưu trạng thái cuối cùng vào localStorage
                    saveOpenSubmenusState();
                });
            });

            // --- *** MỚI: Đóng submenu khi click vào item khác *** ---
            adminSidebar.addEventListener('click', (event) => {
                const clickedElement = event.target;

                // Tìm xem có submenu nào đang mở không
                const openSubmenu = adminSidebar.querySelector('.submenu.open');

                // Nếu không có submenu nào đang mở, không cần làm gì cả
                if (!openSubmenu) {
                    return;
                }

                // Kiểm tra xem click có phải là vào toggle của submenu đang mở không
                const openSubmenuToggle = openSubmenu.previousElementSibling;
                if (openSubmenuToggle && openSubmenuToggle.contains(clickedElement)) {
                    // Click vào chính toggle đang mở -> listener của toggle đó sẽ xử lý việc đóng/mở lại
                    return;
                }

                // Kiểm tra xem click có phải là vào BÊN TRONG submenu đang mở không
                if (openSubmenu.contains(clickedElement)) {
                    // Click vào một link/item bên trong submenu đang mở, không đóng nó
                    return;
                }

                // Kiểm tra xem có phải click vào một toggle CỦA SUBMENU KHÁC không
                const clickedToggle = clickedElement.closest('.has-submenu');
                if (clickedToggle) {
                    // Click vào một toggle khác -> listener của toggle đó sẽ xử lý việc đóng cái cũ, mở cái mới
                    return;
                }

                // --- ĐIỀU KIỆN ĐÓNG SUBMENU ---
                // Nếu đến được đây, có nghĩa là:
                // 1. Có một submenu đang mở.
                // 2. Click KHÔNG phải vào toggle của submenu đó.
                // 3. Click KHÔNG phải vào bên trong submenu đó.
                // 4. Click KHÔNG phải vào một toggle submenu khác.
                // => Click vào một item thông thường hoặc khoảng trống trong sidebar.
                // --> Tiến hành đóng submenu đang mở.
                closeSpecificSubmenu(openSubmenu); // Dùng hàm mới và nó tự động lưu state
            });


            // --- Responsive Adjustments ---
            window.addEventListener('resize', () => {
                const isMobile = window.innerWidth < 992;
                const sidebarIsCollapsed = adminSidebar.classList.contains('collapsed');
                const sidebarIsShowingMobile = adminSidebar.classList.contains('show');

                if (isMobile) {
                    // Chuyển sang mobile
                    if (sidebarIsCollapsed) {
                        adminSidebar.classList.remove('collapsed'); // Bỏ collapsed trên mobile
                        adminContent.classList.remove('expanded');
                    }
                    if (sidebarIsShowingMobile) {
                        mobileOverlay.classList.add('show');
                    } else {
                        mobileOverlay.classList.remove('show');
                    }
                    // Không cần đóng submenu khi resize sang mobile, giữ nguyên trạng thái
                } else {
                    // Chuyển sang desktop
                    adminSidebar.classList.remove('show'); // Tắt trạng thái mobile show
                    mobileOverlay.classList.remove('show');
                    if (sidebarIsCollapsed) {
                        // Nếu đang ở trạng thái collapsed trên desktop, đảm bảo các submenu đóng (không cần lưu lại state)
                        document.querySelectorAll('.submenu.open').forEach(submenu => {
                            submenu.classList.remove('open');
                            const toggle = submenu.previousElementSibling;
                            if (toggle && toggle.classList.contains('has-submenu')) {
                                toggle.classList.remove('open');
                            }
                        });
                    }
                    // Nếu không collapsed, trạng thái submenu được quản lý bởi restore/save
                }
            });

            // --- Server Time Update ---
            function updateCurrentTime() {
                const now = new Date();
                const year = now.getUTCFullYear();
                const month = String(now.getUTCMonth() + 1).padStart(2, '0');
                const day = String(now.getUTCDate()).padStart(2, '0');
                const hours = String(now.getUTCHours()).padStart(2, '0');
                const minutes = String(now.getUTCMinutes()).padStart(2, '0');
                const seconds = String(now.getUTCSeconds()).padStart(2, '0');
                const formattedDate = `${year}-${month}-${day} ${hours}:${minutes}:${seconds}`;
                const timeElement = document.getElementById('currentDateTime');
                if (timeElement) {
                    timeElement.textContent = formattedDate;
                }
            }
            updateCurrentTime();
            setInterval(updateCurrentTime, 1000);

        }); // Kết thúc DOMContentLoaded
    </script>

    @await RenderSectionAsync("Scripts", required: false)
