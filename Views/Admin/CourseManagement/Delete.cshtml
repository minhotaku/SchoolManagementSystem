@model SchoolManagementSystem.Entities.Course
@{
    ViewData["Title"] = "Xác Nhận Xóa Khóa Học"; var facultyName = ViewBag.FacultyNameToDelete as string;
}

<div class="container mt-4">
    @* --- Breadcrumb --- *@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="CourseManagement" asp-action="Index">Quản lý Khóa học</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    @if (Model != null)
    {
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7">
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white"><h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["Title"]</h4></div>
                    <div class="card-body">
                        @* --- Cảnh báo --- *@
                        <div class="alert alert-warning mb-4">
                            <h5 class="alert-heading"><i class="bi bi-exclamation-circle me-2"></i>Cảnh báo!</h5>
                            <p>Bạn có chắc chắn muốn xóa khóa học <strong>@Model.CourseName</strong> (@Model.CourseId)?</p>
                            <p>Hành động này không thể hoàn tác. Hãy đảm bảo không còn sinh viên nào đăng ký khóa học này.</p>
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <p class="mt-2 mb-0 text-danger fw-bold">@TempData["ErrorMessage"]</p>
                            } @* Hiển thị lỗi nếu có SV đăng ký *@
                        </div>

                        @* --- Thông tin khóa học --- *@
                        <div class="mb-4 p-3 bg-light border rounded">
                            <h6>Thông tin khóa học sẽ bị xóa:</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Mã KH:</dt>
                                <dd class="col-sm-8"><span class="font-monospace">@Model.CourseId</span></dd>
                                <dt class="col-sm-4">Tên KH:</dt>
                                <dd class="col-sm-8">@Model.CourseName</dd>
                                <dt class="col-sm-4">Số TC:</dt>
                                <dd class="col-sm-8">@Model.Credits</dd>
                                <dt class="col-sm-4">Giảng viên:</dt>
                                <dd class="col-sm-8">@facultyName</dd>
                            </dl>
                        </div>

                        <form asp-action="Delete" asp-route-id="@Model.CourseId" method="post">
                            @Html.AntiForgeryToken() <input type="hidden" name="id" value="@Model.CourseId" />
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="confirmDeleteCheck" required>
                                <label class="form-check-label" for="confirmDeleteCheck">Tôi đã đọc kỹ cảnh báo và xác nhận muốn xóa khóa học này.</label>
                            </div>
                            <hr />
                            @* --- Nút Bấm --- *@
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-outline-secondary me-md-2"><i class="bi bi-x-circle me-1"></i> Không, quay lại</a>
                                <button type="submit" class="btn btn-danger" id="deleteButton" disabled><i class="bi bi-trash-fill me-1"></i> Có, xóa khóa học</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Lỗi tải thông tin khóa học.</div> <a asp-action="Index">Quay lại</a>
    }
</div>
@section Scripts {
     <script> /* JS disable nút xóa */ const confirmCheck = document.getElementById('confirmDeleteCheck'); const deleteButton = document.getElementById('deleteButton'); deleteButton.disabled = true; confirmCheck.addEventListener('change', function() { deleteButton.disabled = !this.checked; }); document.querySelector('form').addEventListener('submit', function(event) { if (!confirmCheck.checked) { alert('Vui lòng xác nhận.'); event.preventDefault(); event.stopPropagation(); } }); </script>
}