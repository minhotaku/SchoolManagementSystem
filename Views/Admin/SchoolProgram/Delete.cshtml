@model SchoolManagementSystem.Entities.SchoolProgram
@{
    ViewData["Title"] = "Xác Nhận Xóa Chương Trình Học"; int studentCount = ViewBag.StudentCount ?? 0;
}

<div class="container mt-4">
    @* --- Breadcrumb --- *@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="SchoolProgram" asp-action="Index">Quản lý Chương trình</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    @if (Model != null)
    {
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7">
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white"><h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["Title"]</h4></div>
                    <div class="card-body">
                        @* --- Cảnh báo --- *@
                        <div class="alert alert-warning mb-4">
                            <h5 class="alert-heading"><i class="bi bi-exclamation-circle me-2"></i>Cảnh báo!</h5>
                            <p>Bạn có chắc muốn xóa chương trình <strong>@Model.SchoolProgramName</strong> (@Model.SchoolProgramId)?</p>
                            @if (studentCount > 0)
                            {
                                <p class="text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill me-1"></i> Không thể xóa vì đang có @studentCount sinh viên thuộc chương trình này.</p>
                            }
                            else
                            {
                                <p>Hành động này không thể hoàn tác.</p>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <p class="mt-2 mb-0 text-danger fw-bold">@TempData["ErrorMessage"]</p>
                            }
                        </div>

                        @* --- Thông tin --- *@
                        <div class="mb-4 p-3 bg-light border rounded">
                            <h6>Thông tin chương trình:</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Mã CT:</dt>
                                <dd class="col-sm-8"><span class="font-monospace">@Model.SchoolProgramId</span></dd>
                                <dt class="col-sm-4">Tên CT:</dt>
                                <dd class="col-sm-8">@Model.SchoolProgramName</dd>
                                <dt class="col-sm-4">Số SV:</dt>
                                <dd class="col-sm-8">@studentCount</dd>
                            </dl>
                        </div>

                        @* --- Form Xóa --- *@
                        @if (studentCount == 0)
                        {
                            <form asp-action="Delete" asp-route-id="@Model.SchoolProgramId" method="post">
                                @Html.AntiForgeryToken() <input type="hidden" name="id" value="@Model.SchoolProgramId" />
                                <div class="mb-3 form-check"><input type="checkbox" class="form-check-input" id="confirmDeleteCheck" required><label class="form-check-label" for="confirmDeleteCheck">Xác nhận muốn xóa.</label></div> <hr />
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary me-md-2"><i class="bi bi-x-circle me-1"></i> Không, quay lại</a>
                                    <button type="submit" class="btn btn-danger" id="deleteButton" disabled><i class="bi bi-trash-fill me-1"></i> Có, xóa</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            @* --- Nút Quay lại  --- *@
                            <div class="text-end"> <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left me-1"></i> Quay lại</a> </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Lỗi tải thông tin.</div> <a asp-action="Index">Quay lại</a>
    }
</div>
@section Scripts {
     <script> const confirmCheck = document.getElementById('confirmDeleteCheck'); const deleteButton = document.getElementById('deleteButton'); if(deleteButton){ deleteButton.disabled = true; confirmCheck.addEventListener('change', function() { deleteButton.disabled = !this.checked; }); document.querySelector('form')?.addEventListener('submit', function(event) { if (!confirmCheck.checked) { alert('Vui lòng xác nhận.'); event.preventDefault(); event.stopPropagation(); } }); } </script>
}