@model IEnumerable<(SchoolManagementSystem.Entities.Enrollment Enrollment, SchoolManagementSystem.Entities.Student Student, decimal AverageScore, string Classification, string SchoolProgramName, string Username)>

@{
    ViewData["Title"] = "Student Management";
}

<h2>Student Management for Course @ViewBag.CourseId</h2>

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Username</th>
            <th>School Program</th>
            <th>Average Score</th>
            <th>Classification</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Enrollment.StudentId</td>
                <td>@item.Username</td>
                <td>@item.SchoolProgramName</td>
                <td>@item.AverageScore.ToString("F2")</td>
                <td>@item.Classification</td>
                <td>
                    <a asp-action="SendNotification" asp-controller="StudentManagement" asp-route-studentId="@item.Enrollment.StudentId" asp-route-courseId="@item.Enrollment.CourseId">Send Notification</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Details" asp-controller="CourseDetails" asp-route-id="@ViewBag.CourseId">Back to Course</a>