@model IEnumerable<SchoolManagementSystem.Entities.Grade>

@{
    ViewData["Title"] = "Manage Grades";
}

<style>
    body {
        background-color: #f8f9fa;
        margin: 0;
        font-size: 16px;
    }

    .dashboard-container {
        max-width: 1200px;
        width: 95%;
        margin: 2.5rem auto;
        padding: 1.25rem;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .dashboard-title {
        font-size: clamp(1.8rem, 4vw, 2.2rem);
        font-weight: 600;
        color: #1a3c87;
        margin-bottom: 1.25rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.625rem;
    }

        .dashboard-title i {
            color: #ff8c00;
        }

    .grade-table {
        width: 100%;
        border-radius: 10px;
        overflow-x: auto;
        display: block;
    }

        .grade-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .grade-table thead {
            background-color: #1a3c87;
        }

        .grade-table th {
            padding: 0.9375rem;
            font-weight: 600;
            text-transform: uppercase;
            font-size: clamp(0.75rem, 2vw, 0.9rem);
            letter-spacing: 0.5px;
            color: #fff;
            white-space: nowrap;
        }

        .grade-table tbody tr {
            transition: background-color 0.3s ease;
        }

            .grade-table tbody tr:hover {
                background-color: #f1f5ff;
            }

        .grade-table td {
            padding: 0.9375rem;
            font-size: clamp(0.85rem, 2.5vw, 0.95rem);
        }

    .action-icon {
        border: none;
        background: none;
        cursor: pointer;
        padding: 0.3125rem;
        margin: 0 0.3125rem;
        transition: transform 0.2s ease;
        font-size: clamp(1rem, 2.5vw, 1.2rem);
    }

        .action-icon:hover {
            transform: scale(1.2);
        }

    .edit-icon {
        color: #1a3c87;
    }

    .delete-icon {
        color: #dc3545;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #fff;
        padding: 1.25rem;
        border: 2px solid #dc3545;
        border-radius: 8px;
        width: 90%;
        max-width: 400px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .modal-content .warning-icon {
            color: #dc3545;
            font-size: clamp(2rem, 5vw, 2.5rem);
            margin-bottom: 0.625rem;
        }

        .modal-content h4 {
            color: #dc3545;
            margin-bottom: 0.9375rem;
            font-size: clamp(1.2rem, 3vw, 1.5rem);
        }

        .modal-content p {
            margin-bottom: 1.25rem;
            color: #555;
            font-size: clamp(0.9rem, 2vw, 1rem);
        }

        .modal-content .btn {
            padding: 0.5rem 1.25rem;
            margin: 0 0.625rem;
            border-radius: 25px;
            font-weight: 500;
            transition: background-color 0.3s ease, transform 0.2s ease;
            min-width: 80px;
            font-size: clamp(0.9rem, 2vw, 1rem);
        }

        .modal-content .btn-danger {
            background-color: #dc3545;
            color: #fff;
            border: none;
        }

            .modal-content .btn-danger:hover {
                background-color: #c82333;
                transform: translateY(-2px);
            }

        .modal-content .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            border: none;
        }

            .modal-content .btn-secondary:hover {
                background-color: #5a6268;
                transform: translateY(-2px);
            }

    .summary-section {
        margin-top: 1.25rem;
        padding: 0.9375rem;
        background-color: #f9fbfd;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }

        .summary-section h4 {
            font-size: clamp(1.1rem, 2.5vw, 1.3rem);
            font-weight: 600;
            color: #1a3c87;
            margin-bottom: 0.625rem;
        }

        .summary-section p {
            margin: 0.3125rem 0;
            color: #555;
            font-size: clamp(0.85rem, 2vw, 1rem);
        }

    .action-buttons {
        margin-top: 1.25rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.625rem;
    }

    .action-btn {
        padding: 0.625rem 1.25rem;
        border-radius: 25px;
        font-weight: 500;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
        min-width: 120px;
        text-align: center;
        font-size: clamp(0.9rem, 2vw, 1rem);
    }

    .btn-add-grade {
        background-color: #28a745;
        color: #fff;
    }

        .btn-add-grade:hover {
            background-color: #218838;
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-back {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-back:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            color: #fff;
        }

    @@media (max-width: 768px) {
        .grade-table th, .grade-table td {
            padding: 0.625rem;
        }

        .action-btn {
            flex: 1 0 100%; /* Nút xếp dọc trên mobile */
        }
    }
</style>

<div class="dashboard-container">
    <h2 class="dashboard-title">
        <i class="bi bi-gear-fill"></i> Grades for Student @ViewBag.StudentId (Enrollment @ViewBag.EnrollmentId)
    </h2>

    <div class="grade-table">
        <table>
            <thead>
                <tr>
                    <th>Grade ID</th>
                    <th>Component</th>
                    <th>Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var grade in Model)
                {
                    <tr>
                        <td>@grade.GradeId</td>
                        <td>@grade.Component</td>
                        <td>@grade.Score</td>
                        <td>
                            <form asp-action="EditGrade" asp-controller="GradeManagement" asp-route-id="@grade.GradeId" method="get" style="display:inline;">
                                <button type="submit" class="action-icon edit-icon" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                            </form>
                            <button type="button" class="action-icon delete-icon" onclick="showDeleteModal('@grade.GradeId')" title="Delete">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="summary-section">
        <h4>Summary</h4>
        <p>Average Score: @ViewBag.AverageScore.ToString("F2")</p>
        <p>Classification: @ViewBag.Classification</p>
    </div>

    <div class="action-buttons">
        <a asp-action="AddGrade" asp-controller="GradeManagement" asp-route-enrollmentId="@ViewBag.EnrollmentId" class="action-btn btn-add-grade">
            <i class="bi bi-plus-circle-fill"></i> Add Grade
        </a>
        <a asp-action="Index" asp-controller="GradeManagement" asp-route-courseId="@ViewBag.CourseId" class="action-btn btn-back">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <span class="warning-icon"><i class="bi bi-exclamation-triangle-fill"></i></span>
            <h4>Confirm Deletion</h4>
            <p>Are you sure you want to delete this point?</p>
            <form id="deleteForm" asp-action="DeleteGrade" asp-controller="GradeManagement" method="post" style="display:inline;">
                <input type="hidden" name="id" id="gradeIdToDelete" />
                <button type="submit" class="btn btn-danger">Yes</button>
                <button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">No</button>
            </form>
        </div>
    </div>
</div>

<script>
    function showDeleteModal(gradeId) {
        document.getElementById('gradeIdToDelete').value = gradeId;
        document.getElementById('deleteModal').style.display = 'flex';
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').style.display = 'none';
    }

    window.onclick = function (event) {
        var modal = document.getElementById('deleteModal');
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }
</script>