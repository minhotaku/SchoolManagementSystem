@using SchoolManagementSystem.Models.Student
@model List<CourseViewModel>
@{
    ViewData["Title"] = "Danh sách khóa học";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">
                <i class="bi bi-book me-2"></i>Danh sách khóa học đã đăng ký
            </h4>
            <a asp-controller="Student" asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Quay lại
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            <!-- Thanh tìm kiếm -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm khóa học...">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary" id="filterAll">Tất cả</button>
                        <button type="button" class="btn btn-outline-primary" id="filterCurrent">Học kỳ hiện tại</button>
                        <button type="button" class="btn btn-outline-primary" id="filterPast">Học kỳ trước</button>
                    </div>
                </div>
            </div>

            <!-- Bảng khóa học -->
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="coursesTable">
                        <thead class="table-light">
                            <tr>
                                <th>Mã khóa học</th>
                                <th>Tên khóa học</th>
                                <th>Tín chỉ</th>
                                <th>Học kỳ</th>
                                <th>Giảng viên</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr data-semester="@course.Semester">
                                    <td>@course.CourseId</td>
                                    <td>@course.CourseName</td>
                                    <td>@course.Credits</td>
                                    <td>@course.Semester</td>
                                    <td>@course.FacultyName</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Student" asp-action="CourseDetail" asp-route-id="@course.CourseId"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-info-circle me-1"></i>Chi tiết
                                            </a>
                                            <a asp-controller="Student" asp-action="GradeDetail" asp-route-id="@course.EnrollmentId"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-graph-up me-1"></i>Xem điểm
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>Bạn chưa đăng ký khóa học nào.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Chức năng tìm kiếm
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#coursesTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Chức năng lọc theo học kỳ
            $("#filterAll").click(function() {
                $("#coursesTable tbody tr").show();
            });

            $("#filterCurrent").click(function() {
                const currentSemester = "2025-1"; // Giả định học kỳ hiện tại, có thể lấy từ Model
                $("#coursesTable tbody tr").hide();
                $(`#coursesTable tbody tr[data-semester="${currentSemester}"]`).show();
            });

            $("#filterPast").click(function() {
                const currentSemester = "2025-1"; // Giả định học kỳ hiện tại
                $("#coursesTable tbody tr").hide();
                $(`#coursesTable tbody tr:not([data-semester="${currentSemester}"])`).show();
            });
        });
    </script>
}