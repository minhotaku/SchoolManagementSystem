@model SchoolManagementSystem.Models.AdminViewModel
@{
    ViewData["Title"] = "Admin Details";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">@* Breadcrumb *@</nav>
    @if (Model != null)
    {
        <h3><i class="bi bi-person-lock me-2"></i>@ViewData["Title"]: @Model.Username</h3> <hr />
        <dl class="row">
            <dt class="col-sm-3">Admin ID:</dt>
            <dd class="col-sm-9">@Model.AdminId</dd>
            <dt class="col-sm-3">Username:</dt>
            <dd class="col-sm-9">@Model.Username</dd>
            <dt class="col-sm-3">User ID:</dt>
            <dd class="col-sm-9">@Model.UserId</dd>
        </dl> <hr />
        <div>
            <a asp-action="Edit" asp-route-id="@Model.AdminId" class="btn btn-primary">Edit</a> |
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Cannot display admin details. Data not found.</div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    }
</div>