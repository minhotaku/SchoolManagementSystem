@model SchoolManagementSystem.Models.StudentViewModel
@{
    ViewData["Title"] = "Student Detail";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="StudentManagement" asp-action="Index">Student Management</a></li>
            @* Show name only if Model is not null *@
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]: @(Model?.Username ?? "Unknown")</li>
        </ol>
    </nav>

    @* Check if Model is null before displaying *@
    @if (Model != null)
    {
        <h3><i class="bi bi-person-badge me-2"></i>@ViewData["Title"]</h3>
        <hr />

        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    @* Use correct property names from StudentViewModel *@
                    <dt class="col-sm-4">Student ID:</dt>
                    <dd class="col-sm-8"><span class="font-monospace">@Model.StudentId</span></dd>

                    <dt class="col-sm-4">Username:</dt>
                    <dd class="col-sm-8">@Model.Username</dd>

                    <dt class="col-sm-4">User ID:</dt>
                    <dd class="col-sm-8"><span class="font-monospace">@Model.UserId</span></dd>

                    <dt class="col-sm-4">School Program:</dt>
                    <dd class="col-sm-8">@Model.SchoolProgramName</dd>

                    <dt class="col-sm-4">Program ID:</dt>
                    <dd class="col-sm-8"><span class="font-monospace">@Model.SchoolProgramId</span></dd>
                </dl>
            </div>
            <div class="col-md-4 text-center">
                <div style="font-size: 6rem; color: #0d6efd;"> <i class="bi bi-mortarboard-fill"></i> </div>
            </div>
        </div>

        <hr />
        <div>
            @* Edit link points to the correct Edit action with StudentId *@
            <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a> |
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Unable to display student details. Data not found.</div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    }
</div>