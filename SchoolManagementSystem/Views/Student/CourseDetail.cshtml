@model SchoolManagementSystem.Models.Student.CourseViewModel
@{
    ViewData["Title"] = "Course Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Courses">Courses</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.CourseName</li>
        </ol>
    </nav>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">
                <i class="bi bi-book me-2"></i>Course Detail
            </h4>
            <div>
                <a asp-controller="Student" asp-action="Courses" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left me-1"></i>Back
                </a>
                <a asp-controller="Student" asp-action="GradeDetail" asp-route-id="@Model.EnrollmentId" class="btn btn-primary">
                    <i class="bi bi-graph-up me-1"></i>View Grades
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="w-25">CourseID:</th>
                                <td>@Model.CourseId</td>
                            </tr>
                            <tr>
                                <th>Course Name:</th>
                                <td>@Model.CourseName</td>
                            </tr>
                            <tr>
                                <th>Credits:</th>
                                <td>@Model.Credits</td>
                            </tr>
                            <tr>
                                <th>Semester:</th>
                                <td>@Model.Semester</td>
                            </tr>
                            <tr>
                                <th>FacultyName:</th>
                                <td>@Model.FacultyName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Academic Information</h5>
                            <p class="card-text">
                                <strong>Enrollment Id:</strong> @Model.EnrollmentId
                            </p>
                            <p class="card-text">
                                <strong>Status:</strong> <span class="badge bg-success">Studying</span>
                            </p>
                            <p class="card-text">
                                <strong>Progress:</strong>
                                <div class="progress mt-2">
                                    <div class="progress-bar" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">70%</div>
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông tin bổ sung về khóa học -->
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clipboard-check me-2"></i>Course Description
                    </h5>
                </div>
                <div class="card-body">
                    <p>
                        This is course description @Model.CourseName.
                        You will learn both basic and advanced knowledge in this field
                    </p>
                    <p>The course includes the following main topics:</p>
                    <ul>
                        <li>Fundamental Knowledge</li>
                        <li>Practice and Application</li>
                        <li>Research and Development</li>
                        <li>Evaluation and Summaryt</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-check me-2"></i>Class Schedule and Deadlines
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="badge bg-primary me-2">Class Session</span>
                                Monday, 7:30 - 9:30
                            </div>
                            <span class="text-muted">Room A1.01</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="badge bg-primary me-2">Class Session</span>
                                Thursday, 13:30 - 15:30
                            </div>
                            <span class="text-muted">Room A2.05</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="badge bg-danger me-2">Deadline</span>
                                Midterm Assignment
                            </div>
                            <span class="text-muted">15/04/2025</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <span class="badge bg-danger me-2">Deadline</span>
                                Final Assignment
                            </div>
                            <span class="text-muted">30/05/2025</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>